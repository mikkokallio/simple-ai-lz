# Server Configuration
PORT=5000
NODE_ENV=development

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_CONTAINER_NAME=chat-data

# AI Foundry
AI_FOUNDRY_ENDPOINT=https://foundry-ezle7syi.cognitiveservices.azure.com/
AI_FOUNDRY_DEPLOYMENT_NAME=gpt-5-mini
AI_FOUNDRY_KEY=your-api-key-or-leave-empty-for-managed-identity

# Azure Entra ID Authentication
ENTRA_TENANT_ID=your-tenant-id-guid
ENTRA_CLIENT_ID=your-client-id-guid
ENTRA_CLIENT_SECRET=your-client-secret-value
# Audience for token validation (usually same as client ID for single-tenant apps)
ENTRA_AUDIENCE=your-client-id-guid
# Issuer URL (leave as is unless using national cloud)
ENTRA_ISSUER=https://login.microsoftonline.com/{tenantId}/v2.0

# Session Secret
SESSION_SECRET=your-random-secret-key-change-in-production
